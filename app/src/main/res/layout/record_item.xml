<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/itemView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/homeitem_underline"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/run_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/run_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="0dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/run_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="1"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/run_item_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="left"
                android:maxLines="1"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/run_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="left"
                android:maxLines="1"

                />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/run_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#E4E4E4"
            app:pressedTranslationZ="@dimen/cardview_compat_inset_shadow"
            app:srcCompat="@drawable/deletebtn"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>
</LinearLayout>



