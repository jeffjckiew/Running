<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailSetting_emailActivity">

    <LinearLayout
        android:id="@+id/topline"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一頁"
            android:onClick="lastpage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="編輯電子郵件"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#E3DADA"
        android:layout_below="@+id/topline"
        />
    <LinearLayout
        android:id="@+id/myemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/underline"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目前的電子郵件為"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxx@gmail.com"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/myemail">

        <EditText
            android:id="@+id/enter_email"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:inputType="text"
            android:hint="新電子郵件帳號"/>
        <EditText
            android:id="@+id/re_enter_email"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:inputType="text"
            android:hint="新電子郵件帳號(確認)"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="40dp"
            android:text="完成"
            android:onClick="checkmail"
            />

    </LinearLayout>

</RelativeLayout>