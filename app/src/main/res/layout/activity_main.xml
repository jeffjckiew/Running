<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <!--    個人資料列-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/personalline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >
        <ImageButton
            android:id="@+id/personlSet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"

            />

<!--        <de.hdodenhof.circleimageview.CircleImageView-->
<!--            xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--            android:id="@+id/personlSet_btn"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:src="@drawable/person"-->
<!--            app:civ_border_width="1dp"-->
<!--            app:civ_border_color="#A3A3A3"/>-->
    </LinearLayout>



    <!--    頁面內容-->
    <FrameLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/setline"
        android:layout_below="@+id/personalline"
        />


    <!--    分隔線-->
    <TextView
        android:id="@+id/setline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9510100F"
        android:layout_above="@+id/funcline"
        />
    <!--    功能列表-->
    <LinearLayout
        android:id="@+id/funcline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/home1"
            android:background="#FFFFFF"
            />

        <ImageButton
            android:id="@+id/run_btn"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/run"
            android:background="#FFFFFF"
            />

        <ImageButton
            android:id="@+id/record_btn"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/record"
            android:background="#FFFFFF"
            />
    </LinearLayout>

</RelativeLayout>